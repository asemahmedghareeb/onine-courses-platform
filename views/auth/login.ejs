            </div>
            <div>
                <label for="password">كلمة المرور</label>
                <input type="password" id="password" name="password" required>
            </div>
        </div>
        <button type="submit">تسجيل الدخول</button>
        
    </form>
        <a href="/register">ليس لدي حساب حساب</a>
    <script src="js/main.js"></script></script>
</body>
