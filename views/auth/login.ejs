<body>
    <%- include('../nav.ejs') %>
    <h1>تسجيل الدخول</h1>
    <div><%= error%></div>
    <form action="/login" method="Post" class="ff">
        <div class="form-container">
            <div>
                <label for="email">الايميل</label>
